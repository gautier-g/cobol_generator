{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CobolSmartGen diagnosis",
  "type": "object",
  "additionalProperties": true,
  "required": ["file", "summary", "patch_plan"],
  "properties": {
    "file": { "type": "string" },
    "summary": { "type": "string" },
    "notes": { "type": ["string", "null"] },
    "causes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["reason"],
        "additionalProperties": true,
        "properties": {
          "file": { "type": ["string", "null"] },
          "line": { "type": ["integer", "null"] },
          "section": { "type": ["string", "null"] },
          "reason": { "type": "string" },
          "code": { "type": ["string", "null"] }
        }
      }
    },
    "patch_plan": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["op"],
        "additionalProperties": true,
        "properties": {
          "op": {
            "type": "string",
            "enum": ["insert_after", "insert_before", "replace", "delete"]
          },
          "file": { "type": ["string", "null"] },
          "anchor": { "type": ["string", "null"] },
          "before": { "type": ["string", "null"] },
          "after": { "type": ["string", "null"] },
          "text": { "type": ["string", "null"] }
        }
      }
    }
  }
}
