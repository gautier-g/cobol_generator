       IDENTIFICATION DIVISION.
       PROGRAM-ID. PARTICIPATION-DAL-DB.

       ENVIRONMENT DIVISION.
       CONFIGURATION SECTION.
       REPOSITORY.
           FUNCTION ALL INTRINSIC.
       DATA DIVISION.
       WORKING-STORAGE SECTION.
OCESQL*EXEC SQL INCLUDE SQLCA END-EXEC.
OCESQL     copy "sqlca.cbl".
       01  WS-CONNECTED-FLAG      PIC X VALUE 'N'.
       88  WS-CONNECTED           VALUE 'Y'.
       01  WS-CURSOR-OPEN-FLAG    PIC X VALUE 'N'.
       88  WS-CURSOR-OPEN         VALUE 'Y'.
       01  WS-PART-ID-ACTIVITE    PIC 9(9).
       01  WS-PART-ID-USER        PIC 9(9).
       01  WS-PART-MODE-TRANSPORT PIC S9(2).
       01  WS-DB-NAME.
           05  WS-DB-NAME-TEXT     PIC X(13) VALUE 'carbontrackdb'.
           05  WS-DB-NAME-TERM     PIC X VALUE X'00'.
       01  WS-DB-USER.
           05  WS-DB-USER-TEXT     PIC X(10) VALUE 'carbonuser'.
           05  WS-DB-USER-TERM     PIC X VALUE X'00'.
       01  WS-DB-PASSWORD.
           05  WS-DB-PASSWORD-TEXT PIC X(9) VALUE 'CARBONPWD'.
           05  WS-DB-PASSWORD-TERM PIC X VALUE X'00'.
       01  WS-DB-NAME-LEN         PIC S9(4) COMP-5 VALUE 13.
       01  WS-DB-USER-LEN         PIC S9(4) COMP-5 VALUE 10.
       01  WS-DB-PASSWORD-LEN     PIC S9(4) COMP-5 VALUE 9.
       01  WS-PGHOST-NAME         PIC X(6) VALUE 'PGHOST'.
       01  WS-PGHOST-VALUE        PIC X(64) VALUE 'localhost'.
       01  WS-PGPORT-NAME         PIC X(6) VALUE 'PGPORT'.
       01  WS-PGPORT-VALUE        PIC X(5) VALUE '5432'.
       01  WS-PGUSER-NAME         PIC X(6) VALUE 'PGUSER'.
       01  WS-PGUSER-VALUE        PIC X(64) VALUE 'carbonuser'.
       01  WS-PGPASSWORD-NAME     PIC X(10) VALUE 'PGPASSWORD'.
       01  WS-PGPASSWORD-VALUE    PIC X(64) VALUE 'CARBONPWD'.
       01  WS-PGDATABASE-NAME     PIC X(10) VALUE 'PGDATABASE'.
       01  WS-PGDATABASE-VALUE    PIC X(64) VALUE 'carbontrackdb'.
OCESQL*
OCESQL 01  SQ0001.
OCESQL     02  FILLER PIC X(162) VALUE "SELECT PARTICIPATION_ID_ACTIVI"
OCESQL  &  "TE, PARTICIPATION_ID_USER, PARTICIPATION_MODE_TRANSPORT FR"
OCESQL  &  "OM PARTICIPATION ORDER BY PARTICIPATION_ID_ACTIVITE, PARTI"
OCESQL  &  "CIPATION_ID_USER".
OCESQL     02  FILLER PIC X(1) VALUE X"00".
OCESQL*
OCESQL 01  SQ0002.
OCESQL     02  FILLER PIC X(126) VALUE "UPDATE PARTICIPATION SET PARTI"
OCESQL  &  "CIPATION_MODE_TRANSPORT = $1 WHERE PARTICIPATION_ID_ACTIVI"
OCESQL  &  "TE = $2 AND PARTICIPATION_ID_USER = $3".
OCESQL     02  FILLER PIC X(1) VALUE X"00".
OCESQL*
OCESQL 01  SQ0003.
OCESQL     02  FILLER PIC X(014) VALUE "DISCONNECT ALL".
OCESQL     02  FILLER PIC X(1) VALUE X"00".
OCESQL*
       LINKAGE SECTION.
       01 LK-OPERATION PIC X(4).
       01 LK-END-OF-FILE PIC X.
       01 LK-PARTICIPATION.
           05 LK-PARTICIPATION-ID-ACTIVITE PIC 9(9).
           05 LK-PARTICIPATION-ID-USER PIC 9(9).
           05 LK-PARTICIPATION-MODE-TRANSPORT PIC S9(2).
       PROCEDURE DIVISION USING LK-OPERATION LK-END-OF-FILE 
           LK-PARTICIPATION.
       MAIN-ENTRY.
           IF LK-OPERATION NOT = 'END '
               PERFORM DAL-CONNECT
               IF NOT WS-CONNECTED
                   MOVE 'Y' TO LK-END-OF-FILE
                   GOBACK
               END-IF
           END-IF
           EVALUATE LK-OPERATION
               WHEN 'READ'
                   PERFORM DAL-READ
               WHEN 'SAVE'
                   PERFORM DAL-SAVE
               WHEN 'END '
                   PERFORM DAL-END
               WHEN OTHER
                   DISPLAY 'ERREUR: Operation inconnue: ' LK-OPERATION
           END-EVALUATE
           GOBACK.
       
       DAL-SET-ENV.
           DISPLAY WS-PGHOST-NAME UPON ENVIRONMENT-NAME
           DISPLAY WS-PGHOST-VALUE UPON ENVIRONMENT-VALUE
           DISPLAY WS-PGPORT-NAME UPON ENVIRONMENT-NAME
           DISPLAY WS-PGPORT-VALUE UPON ENVIRONMENT-VALUE
           DISPLAY WS-PGUSER-NAME UPON ENVIRONMENT-NAME
           DISPLAY WS-PGUSER-VALUE UPON ENVIRONMENT-VALUE
           DISPLAY WS-PGPASSWORD-NAME UPON ENVIRONMENT-NAME
           DISPLAY WS-PGPASSWORD-VALUE UPON ENVIRONMENT-VALUE
           DISPLAY WS-PGDATABASE-NAME UPON ENVIRONMENT-NAME
           DISPLAY WS-PGDATABASE-VALUE UPON ENVIRONMENT-VALUE.
       
       DAL-CONNECT.
           PERFORM DAL-SET-ENV
           CALL "OCESQLStartSQL" END-CALL
           CALL "OCESQLConnect" USING
               BY REFERENCE SQLCA
               BY REFERENCE WS-DB-USER
               BY VALUE WS-DB-USER-LEN
               BY REFERENCE WS-DB-PASSWORD
               BY VALUE WS-DB-PASSWORD-LEN
               BY REFERENCE WS-DB-NAME
               BY VALUE WS-DB-NAME-LEN
           END-CALL
           CALL "OCESQLEndSQL" END-CALL
           IF SQLCODE = 0
               MOVE 'Y' TO WS-CONNECTED-FLAG
               DISPLAY 'carbontrackdb'
           ELSE
               DISPLAY 'ERREUR CONNECT: SQLCODE=' SQLCODE
               DISPLAY 'SQLSTATE=' SQLSTATE
               DISPLAY 'SQLERRMC=' SQLERRMC
           END-IF.
       
       DAL-READ.
           IF NOT WS-CURSOR-OPEN
OCESQL*        EXEC SQL DECLARE C_PAR CURSOR FOR
OCESQL*            SELECT PARTICIPATION_ID_ACTIVITE, 
OCESQL*            PARTICIPATION_ID_USER,
OCESQL*                   PARTICIPATION_MODE_TRANSPORT
OCESQL*            FROM PARTICIPATION
OCESQL*            ORDER BY PARTICIPATION_ID_ACTIVITE, 
OCESQL*            PARTICIPATION_ID_USER
OCESQL*        END-EXEC
OCESQL     CALL "OCESQLCursorDeclare" USING
OCESQL          BY REFERENCE SQLCA
OCESQL          BY REFERENCE "PARTICIPATION_DAL_DB_C_PAR" & x"00"
OCESQL          BY REFERENCE SQ0001
OCESQL     END-CALL
OCESQL*        EXEC SQL OPEN C_PAR END-EXEC
OCESQL     CALL "OCESQLCursorOpen" USING
OCESQL          BY REFERENCE SQLCA
OCESQL          BY REFERENCE "PARTICIPATION_DAL_DB_C_PAR" & x"00"
OCESQL     END-CALL
               IF SQLCODE NOT = 0
                   DISPLAY 'ERREUR OPEN: SQLCODE=' SQLCODE
                   MOVE 'Y' TO LK-END-OF-FILE
                   EXIT PARAGRAPH
               END-IF
               MOVE 'Y' TO WS-CURSOR-OPEN-FLAG
               DISPLAY 'Curseur C_PAR ouvert'
           END-IF
OCESQL*    EXEC SQL FETCH C_PAR INTO
OCESQL*        :WS-PART-ID-ACTIVITE,
OCESQL*        :WS-PART-ID-USER,
OCESQL*        :WS-PART-MODE-TRANSPORT
OCESQL*    END-EXEC
OCESQL     CALL "OCESQLStartSQL"
OCESQL     END-CALL
OCESQL     CALL "OCESQLSetResultParams" USING
OCESQL          BY VALUE 1
OCESQL          BY VALUE 9
OCESQL          BY VALUE 0
OCESQL          BY REFERENCE WS-PART-ID-ACTIVITE
OCESQL     END-CALL
OCESQL     CALL "OCESQLSetResultParams" USING
OCESQL          BY VALUE 1
OCESQL          BY VALUE 9
OCESQL          BY VALUE 0
OCESQL          BY REFERENCE WS-PART-ID-USER
OCESQL     END-CALL
OCESQL     CALL "OCESQLSetResultParams" USING
OCESQL          BY VALUE 3
OCESQL          BY VALUE 2
OCESQL          BY VALUE 0
OCESQL          BY REFERENCE WS-PART-MODE-TRANSPORT
OCESQL     END-CALL
OCESQL     CALL "OCESQLCursorFetchOne" USING
OCESQL          BY REFERENCE SQLCA
OCESQL          BY REFERENCE "PARTICIPATION_DAL_DB_C_PAR" & x"00"
OCESQL     END-CALL
OCESQL     CALL "OCESQLEndSQL"
OCESQL     END-CALL
           EVALUATE SQLCODE
               WHEN 0
                   MOVE WS-PART-ID-ACTIVITE TO 
                   LK-PARTICIPATION-ID-ACTIVITE
                   MOVE WS-PART-ID-USER TO LK-PARTICIPATION-ID-USER
                   MOVE WS-PART-MODE-TRANSPORT TO
                   LK-PARTICIPATION-MODE-TRANSPORT
                   MOVE 'N' TO LK-END-OF-FILE
               WHEN 100
                   MOVE 'Y' TO LK-END-OF-FILE
               WHEN OTHER
                   DISPLAY 'ERREUR FETCH: SQLCODE=' SQLCODE
                   MOVE 'Y' TO LK-END-OF-FILE
           END-EVALUATE.
       
       DAL-SAVE.
           MOVE LK-PARTICIPATION-ID-ACTIVITE TO WS-PART-ID-ACTIVITE
           MOVE LK-PARTICIPATION-ID-USER TO WS-PART-ID-USER
           MOVE LK-PARTICIPATION-MODE-TRANSPORT TO 
           WS-PART-MODE-TRANSPORT
OCESQL*    EXEC SQL UPDATE PARTICIPATION
OCESQL*        SET PARTICIPATION_MODE_TRANSPORT = 
OCESQL*        :WS-PART-MODE-TRANSPORT
OCESQL*        WHERE PARTICIPATION_ID_ACTIVITE = :WS-PART-ID-ACTIVITE
OCESQL*        AND PARTICIPATION_ID_USER = :WS-PART-ID-USER
OCESQL*    END-EXEC
OCESQL     CALL "OCESQLStartSQL"
OCESQL     END-CALL
OCESQL     CALL "OCESQLSetSQLParams" USING
OCESQL          BY VALUE 3
OCESQL          BY VALUE 2
OCESQL          BY VALUE 0
OCESQL          BY REFERENCE WS-PART-MODE-TRANSPORT
OCESQL     END-CALL
OCESQL     CALL "OCESQLSetSQLParams" USING
OCESQL          BY VALUE 1
OCESQL          BY VALUE 9
OCESQL          BY VALUE 0
OCESQL          BY REFERENCE WS-PART-ID-ACTIVITE
OCESQL     END-CALL
OCESQL     CALL "OCESQLSetSQLParams" USING
OCESQL          BY VALUE 1
OCESQL          BY VALUE 9
OCESQL          BY VALUE 0
OCESQL          BY REFERENCE WS-PART-ID-USER
OCESQL     END-CALL
OCESQL     CALL "OCESQLExecParams" USING
OCESQL          BY REFERENCE SQLCA
OCESQL          BY REFERENCE SQ0002
OCESQL          BY VALUE 3
OCESQL     END-CALL
OCESQL     CALL "OCESQLEndSQL"
OCESQL     END-CALL
           IF SQLCODE NOT = 0
               DISPLAY 'ERREUR UPDATE: SQLCODE=' SQLCODE
           END-IF.
       
       DAL-END.
           IF WS-CURSOR-OPEN
OCESQL*        EXEC SQL CLOSE C_PAR END-EXEC
OCESQL     CALL "OCESQLCursorClose"  USING
OCESQL          BY REFERENCE SQLCA
OCESQL          BY REFERENCE "PARTICIPATION_DAL_DB_C_PAR" & x"00"
OCESQL     END-CALL
               MOVE 'N' TO WS-CURSOR-OPEN-FLAG
               IF SQLCODE NOT = 0
                   DISPLAY 'ERREUR CLOSE: SQLCODE=' SQLCODE
               END-IF
           END-IF
OCESQL*    EXEC SQL COMMIT END-EXEC
OCESQL     CALL "OCESQLStartSQL"
OCESQL     END-CALL
OCESQL     CALL "OCESQLExec" USING
OCESQL          BY REFERENCE SQLCA
OCESQL          BY REFERENCE "COMMIT" & x"00"
OCESQL     END-CALL
OCESQL     CALL "OCESQLEndSQL"
OCESQL     END-CALL
           IF SQLCODE NOT = 0
               DISPLAY 'ERREUR COMMIT: SQLCODE=' SQLCODE
           END-IF
           IF WS-CONNECTED
OCESQL*        EXEC SQL DISCONNECT ALL END-EXEC
OCESQL     CALL "OCESQLDisconnect" USING
OCESQL          BY REFERENCE SQLCA
OCESQL     END-CALL
               MOVE 'N' TO WS-CONNECTED-FLAG
               IF SQLCODE NOT = 0
                   DISPLAY 'ERREUR DISCONNECT: SQLCODE=' SQLCODE
               END-IF
               DISPLAY 'Fermeture connexion'
           END-IF.