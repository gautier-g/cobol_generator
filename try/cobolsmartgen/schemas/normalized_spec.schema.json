{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CobolSmartGen normalized spec",
  "type": "object",
  "additionalProperties": true,
  "required": ["title", "entities"],
  "properties": {
    "title": { "type": "string" },
    "dialecte_cobol": { "type": "string" },
    "sql_cible": { "type": "string" },
    "nommage": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "variables_case": { "type": "string" },
        "programmes_case": { "type": "string" }
      }
    },
    "entities": {
      "description": "Array of entities; each has name and attrs (normalized SQL types).",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "attrs"],
        "additionalProperties": true,
        "properties": {
          "name": { "type": "string" },
          "attrs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "sql_type"],
              "additionalProperties": true,
              "properties": {
                "name": { "type": "string" },
                "sql_type": { "type": "string" },
                "cobol_pic": { "type": "string" },
                "pk": { "type": "boolean" },
                "fk": { "type": ["string", "boolean", "null"] },
                "nullable": { "type": "boolean" },
                "default": {},
                "auto_generated": { "type": "boolean" }
              }
            }
          }
        }
      }
    }
  }
}
